[Unit]
Description=GPU Overclocking Script
Documentation=https://github.com/pengc99/nvidia-gp-gpu/
After=xdm.service

[Service]
Type=oneshot
Environment="DISPLAY=:0"
ExecStart=/usr/local/src/gpu-oc.bin/gpu-oc.sh
ExecStop=/usr/local/src/gpu-oc.bin/gpu-nooc.sh
User=root
Group=root
RemainAfterExit=yes

[Install]
